{
	"name": "Mikolaj-SMA",
	"description": "Mikolaj SMA donation helper",
	"version": "0.2",
	"incognito": "split",
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"background": {
		"scripts": ["sma.js"],
		"persistent": false
	},  
    "browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/sma16.png",
			"32": "images/sma32.png",
			"48": "images/sma48.png",
			"128": "images/sma128.png"
		}		
    },	
	"icons": {
		"16": "images/sma16.png",
		"32": "images/sma32.png",
		"48": "images/sma48.png",
		"128": "images/sma128.png"
    },
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com ; object-src 'self'",
	"options_page": "options.html",
	"manifest_version": 2
}
